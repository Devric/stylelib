// simple input
// ==============

//  <input type="text" class="simple" />

.simple {
  display: block;
  padding: 5px;
  border: 4px solid #F1B720;
  border-radius: 5px;
  color: #333;
  transition: all 0.3s ease-out;
}

.simple:hover { border-radius: 8px; }
.simple:focus { 
  outline: none;
  border-radius: 8px; 
  border-color: #EBD292;
}
		
// round input
// ==============

//  <input type="text" class="round" />
.round {
  display: block;
  border: none;
  border-radius: 20px;
  padding: 5px 8px;
  color: #333;
  box-shadow: inset 0 2px 0 rgba(0,0,0,.2), 0 0 4px rgba(0,0,0,0.1);
}

.round:focus { 
  outline: none;
  box-shadow: inset 0 2px 0 rgba(0,0,0,.2), 0 0 4px rgba(0,0,0,0.1), 0 0 5px 1px #51CBEE;
}
	

// line input
// ==============

//  <input type="text" class="line" />

.line {
  display: block;
  border: none;
  color: #333;
  background: transparent;
  border-bottom: 1px dotted black;
  padding: 5px 2px 0 2px;
}

.line:focus { 
  outline: none;
  border-color: #51CBEE;
}

